CREATE TABLE species (
    id_specie INT NOT NULL AUTO_INCREMENT,
    specie VARCHAR(50) UNIQUE NOT NULL,
    PRIMARY KEY(id_specie)
)ENGINE=InnoDB;

CREATE TABLE tags (
    id_tag INT NOT NULL AUTO_INCREMENT,
    tag VARCHAR(50) UNIQUE NOT NULL,
    PRIMARY KEY (id_tag)
)ENGINE=InnoDB;

CREATE TABLE sequences (
    id_sequence INT NOT NULL AUTO_INCREMENT,
    id_specie INT,
    accession_number VARCHAR(20),
    accession_version VARCHAR(20),
    alphabet VARCHAR(7),
    authority VARCHAR(20),
    date VARCHAR(20),
    is_circular INT,
    gene_name VARCHAR(100),
    description VARCHAR(100),
    length INT,
    format VARCHAR(10),
    seq_version VARCHAR(20),
    PRIMARY KEY (id_sequence),
    FOREIGN KEY (id_specie) REFERENCES species(id_specie)
)ENGINE=InnoDB;

CREATE TABLE seq_tags (
    id_sequence INT NOT NULL,
    id_tag INT NOT NULL,
    FOREIGN KEY (id_sequence) REFERENCES sequences(id_sequence),
    FOREIGN KEY (id_tag) REFERENCES tags(id_tag)
)ENGINE=InnoDB;

SET SQL_SAFE_UPDATES=0;                 #Just to allow table updates
